<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22577E"
    tools:context=".ui.servicecard.ServiceProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout6"
        android:layout_width="408dp"
        android:layout_height="840dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/background_box"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/serviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView30"
            tools:text="name" />

        <TextView
            android:id="@+id/serviceDescription"
            android:layout_width="333dp"
            android:layout_height="19dp"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.373"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/serviceName"
            app:layout_constraintVertical_bias="0.027"
            tools:text="Description" />

        <TextView
            android:id="@+id/serviceAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.216"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/serviceDescription"
            tools:text="Address" />

        <TextView
            android:id="@+id/servicePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.209"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/serviceAddress"
            tools:text="Phone" />

        <TextView
            android:id="@+id/serviceEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.206"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/servicePhone"
            tools:text="Email" />

        <Button
            android:id="@+id/ServiceCarritoButton"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Agregar al carrito"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.535"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/serviceEmail"
            app:layout_constraintVertical_bias="0.852" />

        <ImageView
            android:id="@+id/imageView30"
            android:layout_width="353dp"
            android:layout_height="245dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/grooming"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageView31"
            android:layout_width="24dp"
            android:layout_height="27dp"
            android:src="@drawable/placeholder"
            app:layout_constraintBottom_toBottomOf="@+id/serviceAddress"
            app:layout_constraintEnd_toStartOf="@+id/serviceAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/serviceDescription" />

        <ImageView
            android:id="@+id/imageView34"
            android:layout_width="24dp"
            android:layout_height="27dp"
            android:src="@drawable/telephone"
            app:layout_constraintBottom_toBottomOf="@+id/servicePhone"
            app:layout_constraintEnd_toStartOf="@+id/servicePhone"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView31"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/imageView35"
            android:layout_width="24dp"
            android:layout_height="27dp"
            android:src="@drawable/email"
            app:layout_constraintBottom_toBottomOf="@+id/serviceEmail"
            app:layout_constraintEnd_toStartOf="@+id/serviceEmail"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView34"
            app:layout_constraintVertical_bias="1.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>